        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "plugins": [
            { "transform": "typescript-is/lib/transform-inline/transformer" }
        ]
    },
    "include": [ "src/**/*" ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}